<Window x:Class="Desktop.ModifyMenuItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Elem létrehozása/módosítása" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Padding="0"
            Margin="10"
            Content="Név:"/>
        
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Width="300"
            Margin="10"
            Name="ItemName"/>

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Padding="0"
            Margin="10"
            Content="Ár:"/>

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="300"
            Margin="10"
            Name="Price"/>

        <Label
            Padding="0"
            Margin="10"
            Grid.Row="2"
            Grid.Column="0"
            Content="Leírás:"/>

        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Width="300"
            Height="100"
            Margin="10"
            Name="Description"
            TextWrapping="Wrap"
            AcceptsReturn="True"/>

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Padding="0"
            Margin="10"
            Content="Kép:"/>

        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Width="300"
            Margin="10"
            Name="Image"/>

        <Button
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Content="Mentés"
            Click="SaveButton_Click"/>
    </Grid>
</Window>
