<UserControl x:Class="Desktop.OrderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                HorizontalAlignment="Left"
                Margin="10"
                Padding="10"
                Width="100"
                Content="Vissza"
                Click="BackToMainMenu_Click"/>

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="24"
                Text="Burger Bár Admin - Rendelés"/>
        </Grid>

        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Row="0" Grid.ColumnSpan="2" Name="Order">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Név" DisplayMemberBinding="{Binding Item.Name}"/>
                        <GridViewColumn Header="Ár" DisplayMemberBinding="{Binding Item.Price}"/>
                        <GridViewColumn Header="Darabszám" DisplayMemberBinding="{Binding Amount}"/>
                        <GridViewColumn Header="Fizetendő" DisplayMemberBinding="{Binding Total}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="5,0" VerticalAlignment="Center">
                <ComboBox
                    Name="Item"
                    Width="250"
                    Margin="5,0"
                    Padding="10,5"/>
                
                <TextBox
                    Name="Amount"
                    Width="50"
                    VerticalContentAlignment="Center"
                    Text="1"
                    Margin="5,0"
                    Padding="10,5"/>
                
                <Label Content="darab" Padding="0" VerticalAlignment="Center"/>
            </StackPanel>

            <Button
                Grid.Row="1"
                Grid.Column="1"
                Content="Hozzáadás"
                Click="AddButton_Click"
                HorizontalAlignment="Right"
                Margin="10,5"
                Padding="10,5"/>

            <StackPanel
                Margin="5,0"
                Grid.Column="0"
                Grid.Row="2"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Left">
                <TextBlock Margin="5" Text="Kijelölt elemek:"/>

                <TextBlock
                    Margin="5"
                    Text="{Binding SelectedItems.Count, ElementName=Reservations}"/>
            </StackPanel>

            <Button
                Grid.Column="1"
                Grid.Row="2"
                Content="Törlés"
                HorizontalAlignment="Right"
                Margin="10,5"
                Padding="10,5"
                Click="DeleteButton_Click"/>

            <Button
                Grid.ColumnSpan="2"
                Grid.Column="0"
                Grid.Row="3"
                Padding="10"
                Content="Számla nyomtatása"
                Click="CreateReceipt_Click"/>
        </Grid>
    </DockPanel>
</UserControl>
