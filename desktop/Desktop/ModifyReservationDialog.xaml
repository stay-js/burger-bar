<Window x:Class="Desktop.ModifyReservationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Padding="0"
            Margin="10"
            Content="Név:"/>

        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Width="300"
            Margin="10"
            Name="Name"/>

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Padding="0"
            Margin="10"
            Content="E-mail:"/>

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="300"
            Margin="10"
            Name="Email"/>

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Padding="0"
            Margin="10"
            Content="Telefonszám:"/>

        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Width="300"
            Margin="10"
            Name="PhoneNumber"/>

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Padding="0"
            Margin="10"
            Content="Dátum:"/>

        <DatePicker
            Grid.Row="3"
            Grid.Column="1"
            Width="300"
            Margin="10"
            Name="Date"/>

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Padding="0"
            Margin="10"
            Content="Időpont:"/>

        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Width="300"
            Margin="10"
            Name="Time"/>

        <Label
            Grid.Row="5"
            Grid.Column="0"
            Padding="0"
            Margin="10"
            Content="Hány főre?"/>

        <TextBox
            Grid.Row="5"
            Grid.Column="1"
            Width="300"
            Margin="10"
            Name="People"/>

        <Button
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            Padding="10"
            Content="Mentés"
            Click="SaveButton_Click"/>
    </Grid>
</Window>
