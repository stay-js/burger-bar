<UserControl x:Class="Desktop.MenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                HorizontalAlignment="Left"
                Margin="10"
                Padding="10"
                Width="100"
                Content="Vissza"
                Click="BackToMainMenu_Click"/>

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="24"
                Text="Burger Bár Admin - Menü"/>
        </Grid>

        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListView Name="Menu">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}"/>
                        <GridViewColumn Header="Név" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Ár" DisplayMemberBinding="{Binding Price}"/>
                        <GridViewColumn Header="Leírás" DisplayMemberBinding="{Binding Description}"/>
                        <GridViewColumn Header="Kép" DisplayMemberBinding="{Binding Image}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel
                    Margin="5,0"
                    Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left">
                    <TextBlock Margin="5" Text="Kijelölt elemek:"/>
                    <TextBlock Margin="5" Text="{Binding SelectedItems.Count, ElementName=Menu}"/>
                </StackPanel>

                <StackPanel
                    Margin="5,0"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button
                        Content="Létrehozás"
                        Margin="5"
                        Padding="10,5"
                        Click="CreateButton_Click"/>
                    <Button 
                        Content="Módosítás"
                        Margin="5"
                        Padding="10,5"
                        Click="ModifyButton_Click"/>
                    <Button
                        Content="Törlés"
                        Margin="5"
                        Padding="10,5"
                        Click="DeleteButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>
